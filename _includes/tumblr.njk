<div class="tumblr-block-header">
	<p class="block-heading-title">Tumblr</p>
</div>

<div class="tumblr-block-array">
		{% if tumblr.posts and tumblr.posts.length > 0 %}
				{% for post in tumblr.posts %}
						<div class="tumblr-block-post">
								<a href="https://{{ tumblr.blogIdentifier }}/post/{{ post.id_string }}">
										{{ post.description | safe }}
								</a>
						</div>
				{% endfor %}
		{% else %}
				<p class="error-text">No posts available.</p>
		{% endif %}
</div>

