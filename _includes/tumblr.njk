<div class="tumblr-block-header">
	<img src="/img/tumblr-logo.png">
	<div class="more-button-style"><a href="https://crashthearcade.tumblr.com/archive">View more</a></div>
</div>
<div class="tumblr-block-array">
		{% if tumblr and tumblr.length > 0 %}
				{% for post in tumblr %}
					<div class="tumblr-block-post">
						<a href="{{ post.link }}">
							<img src="{{ post.imageUrl }}" alt="{{ post.title }}">
						</a>
					</div>
				{% endfor %}
		{% else %}
				<p>No posts available.</p> <!-- This will show if no posts are populated -->
		{% endif %}
</div>
