<div class="now-reading-block">
	{% for post in reading %}
		<a href="{{ post.link }}"><div class="reading-playing-image"><img src="{{ post.image or '/img/no-cover.png' }}" alt="{{ post.title }}"></div></a>
		<div class="vert-align-copy"><h3>» Now reading</h3><a href="{{ post.link }}">{{ post.title | excerpt(120) }}</a></div>
	{% endfor %}
</div>

<div class="now-playing-block">
	{% for post in playing %}
		<a href="{{ post.link }}"><div class="reading-playing-image"><img src="{{ post.image or '/img/no-cover.png' }}" alt="{{ post.title }}"></div></a>
		<div class="vert-align-copy"><h3>» Now playing</h3><a href="{{ post.link }}">{{ post.title | excerpt(120) }}</a></div>
	{% endfor %}
</div>
