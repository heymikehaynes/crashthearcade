<div class="now-block">
	<div class="now-reading-block">
		{% for post in reading %}
			<a href="{{ post.link }}"><div>{{ post.description | safe }}</div></a>
			<div class="vert-align-copy"><h3>Reading</h3><a href="{{ post.link }}">{{ post.title }}</a></div>
		{% endfor %}
	</div>

	<div class="now-playing-block">
		{% for post in playing %}
			<div>{{ post.description | safe }}</div>
			<div class="vert-align-copy"><h3>Playing</h3><a href="{{ post.link }}">{{ post.title }}</a></div>
		{% endfor %}
	</div>
</div>

{% for post in postslist | reverse %}

	<div class="post-item">

		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">
			Â» {{ post.date | ordinalDate }}
		</time>

		<h1 class="postlist-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h1>

		<div class="postlist-content">{{ post.content | safe }}</div>

		{% if post.data.rating is defined %}
		<div class="rating">
				{% for i in range(1, post.data.rating | int + 1) %}
						<i class="fas fa-star"></i>
				{% endfor %}
				{% if post.data.rating % 1 != 0 %}
						<i class="fas fa-star-half-alt"></i>
				{% endif %}
				{% set filledStars = post.data.rating | int %}
				{% if post.data.rating % 1 != 0 %}
						{% set filledStars = filledStars + 1 %}
				{% endif %}
				{% for i in range(filledStars, 5) %}
						<i class="far fa-star"></i>
				{% endfor %}
		</div>
		{% endif %}

		<div class="postlist-tags">
			{% for tag in post.data.tags %}
				{% if tag != "posts" %}
					<a href="/tags/{{ tag | slugify }}/" class="postlist-tag">#{{ tag }}</a>{% if not loop.last %}, {% endif %}
				{% endif %}
			{% endfor %}
		</div>

	</div>

{% endfor %}
