{% for post in postslist | reverse %}
	<div class="post-item format-{{ post.data.type }}">
		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">
			<a href="{{ post.url }}">» {{ post.date | ordinalDate }}</a>
		</time>

		<h1 class="postlist-title">
			<a href="{{ post.url }}">{{ post.data.title }}</a>
		</h1>

		{% if post.data.thumbnailurl %}
			<figure>
				<img src="{{ post.data.thumbnailurl }}" alt="{{ title }}" />
				{% if post.data.thumbnailsource %}
					<figcaption>
						Photo by <a href="{{ post.data.thumbnailsourceurl }}" target="_blank">{{ post.data.thumbnailsource }}</a>
					</figcaption>
				{% endif %}
			</figure>
		{% endif %}


		<div class="postlist-content format-{{ post.data.type }}">
			{{ post.content | safe }}
		</div>

		{% if post.data.sourcename %}
		<div class="postlist-tags">
			<a href="{{ post.data.sourceurl }}" target="_blank" class="postlist-tag post-source">Source: {{ post.data.sourcename }} ↗</i></a>
		</div>
		{% endif %}
	</div>

	{% if loop.index == 2 and page.url == '/' %}
		<div id="tumblr-home" class="tumblr-block">
			{%- include 'tumblr.njk' -%}
		</div>
	{% endif %}

	{% if loop.index == 4 and page.url == '/' %}
		<div class="now-play-read-block">
			<div class="tumblr-block-header">
				<img src="/img/card-badge-now.png">
				<p class="block-heading-title">Now</p>
			</div>
			<div class="now-block-contents">
				{%- include 'now.njk' -%}
			</div>
		</div>
	{% endif %}

	{% if loop.index == 6 and page.url == '/' %}
		<div id="bookmarks-home" class="homemarks-block">
			{%- include 'bookmarks.njk' -%}
		</div>
	{% endif %}

	{% if loop.index == 8 and page.url == '/' %}
		<div class="now-media-block">
			<div class="tumblr-block-header">
				<img src="/img/card-badge-images.png">
				<p class="block-heading-title">Camera roll</p>
			</div>
			{%- include 'gallery.njk' -%}
			<div class="more-button-style"><a href="https://raindrop.io/crashthearcade/camera-roll-50066445">More »</a></div>
		</div>
	{% endif %}
{% endfor %}

<div class="more-button-style"><a href="/archive">Archive »</a></div>
