<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<link rel="icon" type="image/png" href="/img/favicon.png">
		<link rel="me" href="https://social.lol/@crashthearcade">
		<link rel="me" href="https://mastodon.social/@crashthearcade">
		<meta name="fediverse:creator" content="@crashthearcade@social.lol">
		<meta name="description" content="{{ description or metadata.description }}">

		{% ogImage "./og-image.og.njk", { title: title } %}

		{#- Opengraph #}
		<meta property="og:title" content="{{ title | safe }}">
		<meta property="og:type" content="article">
		<meta property="og:url" content="{{ metadata.siteUrl }}{{ page.url }}">
		<meta property="og:description" content="{{ description | safe }}">
		<meta property="og:site_name" content="{{ metadata.siteName }}">

		{#- Atom and JSON feeds included by default #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">

		{%- css %}* { box-sizing: border-box; }{% endcss %}
		{%- css %}{% include "public/css/index.css" %}{% endcss %}

		<!-- Font Awesome -->
		<script src="https://kit.fontawesome.com/16a7b58cc9.js" crossorigin="anonymous"></script>

		<style>{% getBundle "css" %}</style>
	</head>
	<body>

	<div id="container">

		<header>
			{%- include 'sidebar.njk' -%}
		</header>

		<div class="main-content">
			{{ content | safe }}
		</div>

	</div>

	<footer>
		<div class="footer-01">Built with <a href="https://www.11ty.dev/docs/versions/">Eleventy v3.0.0</a></div>
		<div class="footer-02">
			<div class="footer-links">©2015–2024, crash the arcade</div>
		</div>
	</footer>

	<script src="/_vercel/insights/script.js"></script>
	<script src="/_vercel/speed-insights/script.js"></script>
	<script>
		document.querySelector('.nav-toggle').addEventListener('click', function() {
			document.getElementById('nav-menu').classList.toggle('active');
		});
	</script>

	</body>
</html>
