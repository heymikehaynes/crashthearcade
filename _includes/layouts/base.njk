<!doctype html>
<html lang="{{ metadata.language }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<link rel="icon" type="image/png" href="/img/cta-logo-reverse.png">
		<link rel="me" href="https://social.lol/@crashthearcade">
		<meta name="description" content="{{ description or metadata.description }}">

		{#- Atom and JSON feeds included by default #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ metadata.title }}">

		{%- css %}* { box-sizing: border-box; }{% endcss %}
		{%- css %}{% include "public/css/index.css" %}{% endcss %}

		<!-- Font Awesome -->
		<script src="https://kit.fontawesome.com/16a7b58cc9.js" crossorigin="anonymous"></script>

		<style>{% getBundle "css" %}</style>
	</head>
	<body>

	<div id="container">

		<header>
			{%- include 'sidebar.njk' -%}
		</header>

		<div class="main-content">
			{{ content | safe }}
		</div>

	</div>

	<footer>
		<div class="footer-01">©2023–2024, crash the arcade <a href="https://www.11ty.dev/docs/versions/">v2.0.1</a>.</div>
		<div class="footer-02"><a href="#">RSS</a></div>
	</footer>

	</body>
</html>
